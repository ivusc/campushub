<html>
  <%- include('partials/header') %>
  <title>CampusHub - My Dashboard</title>
</html>

<%- include('partials/navbar') %>
<main class="max-w-7xl mx-auto px-4 py-12">

    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900"><%= locals.user.username %>'s Dashboard</h1>
            <p class="text-gray-600">Manage your published posts and drafts.</p>
        </div>
        <a href="/posts/create" class="mt-4 md:mt-0 bg-indigo-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-indigo-700 transition-all text-center">
            + New Post
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-10">
        <div class="bg-white p-6 rounded-xl border border-gray-100">
            <p class="text-sm text-gray-500 uppercase font-bold tracking-wider">Total Posts</p>
            <p class="text-3xl font-black text-indigo-600"><%= posts.length %></p>
        </div>
    </div>

    <div class="bg-white rounded-2xl overflow-hidden">
        <% if (posts.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200 text-left">
                <thead class="bg-gray-50 text-gray-500 text-xs uppercase font-semibold">
                    <tr>
                        <th class="px-6 py-4">Title</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% posts.forEach(post => { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4">
                                <a href="/posts/<%= post._id %>" class="font-medium text-indigo-600 hover:underline">
                                    <%= post.title %>
                                </a>
                            </td>
                            <td class="px-6 py-4 flex items-center justify-center">
                                <% if (post.isPublic) { %>
                                    <span class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded-full">Public</span>
                                <% } else { %>
                                    <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">Private</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500 text-center">
                                <%= post.createdAt.toLocaleDateString() %>
                            </td>
                            <td class="px-6 py-4 text-right space-x-3">
                                <a href="/posts/edit/<%= post._id %>" class="text-sm font-bold text-gray-600 hover:text-indigo-600">Edit</a>
                                <!-- <form action="/posts/delete/<%= post._id %>" method="POST" class="inline" onsubmit="return confirm('Delete this post permanently?')"> -->
                                <button onclick="deletePost('<%= post._id %>')" class="text-sm font-bold text-red-500 hover:text-red-700 cursor-pointer">Delete</button>
                                <!-- </form> -->
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="p-20 text-center">
                <p class="text-gray-500 text-lg mb-4">You haven't written any posts yet.</p>
                <a href="/posts/create" class="text-indigo-600 font-bold hover:underline">Start writing now &rarr;</a>
            </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>

<script>
  async function deletePost(postId) {
    if (!confirm("Are you sure you want to delete this?")) return;

    try {
      const response = await fetch(`/api/posts/${postId}`, {
        method: "DELETE",
      });

      if (response.ok) location.reload();
      else alert("Failed to delete post.");
    } catch (err) {
      console.error("Client error: ", err);
    }
  }
</script>