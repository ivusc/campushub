<head>
  <%- include('../partials/header') %>
  <title>CampusHub - Community Feed</title>
</head>

<body class="flex flex-col min-h-screen bg-gray-50">
  <%- include('../partials/navbar') %>
    <% if (locals.messages && locals.messages.success) { %> <%- include('../partials/success', { successMessage:
        locals.messages.success[0] }) %>
        <% } %>
          <% if (locals.messages && locals.messages.info) { %> <%- include('../partials/info', { infoMessage:
              locals.messages.info[0] }) %>
              <% } %>

                <main class="max-w-7xl min-h-screen mx-auto px-4 sm:px-6 lg:px-8 py-12">
                  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-10">
                    <div>
                      <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">
                        Community Feed
                      </h1>
                      <p class="mt-2 text-lg text-gray-600">
                        Explore the latest thoughts from our users.
                      </p>
                    </div>
                    <div class="mt-4 md:mt-0">
                      <a href="/posts/create"
                        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 transition-all">
                        + Create New Post
                      </a>
                    </div>
                  </div>

                  <% if (posts.length> 0) { %>
                    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                      <% posts.forEach(post=> { %>
                        <article
                          class="min-w-sm flex flex-col bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                          <div class="p-6 flex-1">
                            <div class="flex justify-between">
                              <div
                                class="flex flex-col items-start space-x-2 text-sm text-indigo-600 font-semibold mb-3">
                                <div class="flex items-center">
                                  <div
                                    class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-700 font-bold text-xs">
                                    <%= post.author.username.charAt(0).toUpperCase() %>
                                  </div>
                                  <span class="ml-2 text-sm font-medium text-gray-700 flex flex-col">
                                    <%= post.author.username %>
                                      <time class="text-gray-500 font-medium text-xs">
                                        <%= post.createdAt.toLocaleDateString() %>
                                      </time>
                                  </span>
                                </div>
                              </div>
                              <% if (post.author.username===locals.user.username) { %>
                                <div class="flex gap-1">
                                  <a href="/posts/edit/<%=post._id %>"
                                    class="bg-indigo-300 hover:bg-indigo-400 text-white w-8 h-8 flex justify-center items-center rounded-md text-sm font-medium transition">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                      fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                      stroke-linejoin="round" class="lucide lucide-square-pen-icon lucide-square-pen">
                                      <path d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                      <path
                                        d="M18.375 2.625a1 1 0 0 1 3 3l-9.013 9.014a2 2 0 0 1-.853.505l-2.873.84a.5.5 0 0 1-.62-.62l.84-2.873a2 2 0 0 1 .506-.852z" />
                                    </svg>
                                  </a>
                                  <button onclick="deletePost('<%= post._id %>')"
                                    class="bg-red-500 text-white w-8 h-8 flex justify-center items-center rounded-md text-sm font-medium hover:bg-red-600 transition">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
                                      fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                      stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2">
                                      <path d="M10 11v6" />
                                      <path d="M14 11v6" />
                                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" />
                                      <path d="M3 6h18" />
                                      <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                    </svg>
                                  </button>
                                </div>
                                <% } %>
                            </div>

                            <h2 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                              <%= post.title %>
                            </h2>

                            <p class="text-gray-600 line-clamp-4 mb-4">
                              <%= post.content %>
                            </p>
                          </div>

                          <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex items-center justify-between">
                            <a href="/posts/<%= post._id %>"
                              class="text-sm font-semibold text-indigo-600 hover:text-indigo-500">
                              Read more &rarr;
                            </a>
                          </div>
                        </article>
                        <% }) %>
                    </div>
                    <% } else { %>
                      <div class="text-center py-20 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
                        <p class="text-gray-500 text-lg">
                          No posts yet. Be the first to share something!
                        </p>
                        <a href="/posts/create"
                          class="mt-4 inline-block text-indigo-600 font-semibold hover:underline">Create a post now</a>
                      </div>
                      <% } %>
                </main>

                <%- include('../partials/footer') %>
</body>
<script>
  async function deletePost(postId) {
    if (!confirm("Are you sure you want to delete this?")) return;

    try {
      const response = await fetch(`/api/posts/${postId}`, {
        method: "DELETE",
      });

      if (response.ok) location.reload();
      else alert("Failed to delete post.");
    } catch (err) {
      console.error("Client error: ", err);
    }
  }
</script>