<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>CampusHub - Edit Post</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-lg w-full space-y-8 bg-white p-8 rounded-xl">
          <div class="text-center">
              <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
                  Edit Post
              </h1>
              <p class="mt-2 text-sm text-gray-600">
                  Share your thoughts with the community
              </p>
          </div>

          <a href="/posts/<%= post._id %>" class="text-sm font-medium text-indigo-600 hover:text-indigo-500 hover:underline transition-colors">
            &larr; Cancel and go back
          </a>

          <% if (locals.messages && locals.messages.error) { %>
            <%- include('../partials/error', { errorMessage: locals.messages.error[0] }) %>
          <% } %>

          <div id="error-container" class="max-w-md mx-auto mt-4 hidden items-center p-4 mb-4 text-red-800 bg-red-300 rounded-lg" role="alert">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-alert-icon lucide-circle-alert"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
              <div id="error-message" class="ml-3 text-sm font-medium"></div>
          </div>

          <form id="edit-form" data-id="<%= post._id %>" enctype="multipart/form-data" class="mt-8 space-y-6">
              <div class="rounded-md space-y-4">
                  <div>
                    <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                    <input type="text" id="title" name="title" required 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        value="<%= title %>"
                        placeholder="Give your post a catchy title">
                  </div>

                  <div>
                    <label for="tags" class="block text-sm font-medium text-gray-700">Tags</label>
                    <input type="text" id="tags" name="tags" required 
                        class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                        value="<%= post.tags.join(',') %>"
                        placeholder="Give your post some tags">
                  </div>


                  <div>
                    <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                    <textarea id="content" name="content" rows="6" required 
                        class="appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" 
                        placeholder="Write your story here...">
                      <%= post.content.trim() %>
                    </textarea>
                  </div>


                  <label for="isPublic" class="block text-sm font-medium text-gray-700 mb-1">Visibility</label>
                  <div class="relative">
                      <select 
                          id="isPublic" 
                          name="isPublic" 
                          class="block w-full pl-3 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-lg appearance-none bg-white border"
                      >
                          <option value="true" <%= post.isPublic === true ? 'selected' : '' %>>
                              üåç Public (Visible to everyone)
                          </option>
                          <option value="false" <%= post.isPublic === false ? 'selected' : '' %>>
                              üîí Private (Only you can see this)
                          </option>
                      </select>
                      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                          </svg>
                      </div>
                      <p class="mt-1 text-xs text-gray-500">Private posts will not appear in the community feed.</p>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700">Upload New Image (Optional)</label>
                    <input type="file" name="postImage" accept="image/*"
                        class="mt-1 block w-full text-sm text-gray-500 rounded-md  file:mr-4 file:py-2 file:px-2 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                  </div>
              </div>

              <div class="flex items-center justify-center gap-4">
                <button type="submit" 
                    class="group relative flex justify-center py-3 px-6 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all active:scale-95">
                    Edit Post
                </button>
              </div>
          </form>
      </div>
  </main>

  <%- include('../partials/footer') %>
</body>

<script>
  const editForm = document.getElementById('edit-form');

  editForm.addEventListener('submit', async (e) => {
    e.preventDefault();

    const errorContainer = document.getElementById('error-container');
    const errorMessage = document.getElementById('error-message');
    errorContainer.classList.add('hidden');
    errorContainer.classList.remove('flex');

    const formData = new FormData(editForm);
    const postData = Object.fromEntries(formData.entries());
    const postId = editForm.dataset.id;
    console.log(postData,119);

    try{
      const response = await fetch(`/api/posts/${postId}`, {
        method: 'PUT',
        body: formData
      });

      if (response.ok) {
        location.href = `/posts/${postId}`
      } else { 
        errorMessage.textContent = err.toString();
        errorContainer.classList.remove('hidden');
        errorContainer.classList.add('flex');
      };
    
    } catch (error) {
      console.error(error)
      errorMessage.textContent = error.toString();
      errorContainer.classList.remove('hidden');
      errorContainer.classList.add('flex');
    }
  })
</script>
</html>